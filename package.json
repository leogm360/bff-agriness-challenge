{
  "name": "bff-agriness-challenge",
  "version": "0.0.1",
  "description": "Implementação de BFF desafio agriness",
  "author": "Leonardo Moraes",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "dev": "npm run dev --workspaces",
    "format": "prettier --write 'packages/**/*.{js,ts,json}'",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "test:cov": "npm run test:cov --workspaces",
    "commit:lint": "commitlint --edit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "prettier": "^3.3.2"
  }
}